<MyLayout>:
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        # 上面的BoxLayout，包含ScrollView
        # BoxLayout:
        #     orientation: 'vertical'
        #     size_hint: (1, 0.88)
        #     canvas.before:
        #         Color:
        #             rgba: (1, 0, 0, 1)
        #         Rectangle:
        #             pos: self.pos
        #             size: self.size
        ScrollView:
            size_hint: (1, 0.88)
            canvas.before:
                Color:
                    rgba: (0, 1, 1, 1)  # 設置背景顏色為綠色
                Rectangle:
                    pos: self.pos
                    size: self.size
            BoxLayout:
                id: word_card_area
                orientation: 'vertical'
                size_hint_y: None
                # height: self.minimum_height
                canvas.before:
                    Color:
                        rgba: (1, 0, 0, 1)
                    Rectangle:
                        pos: self.pos
                        size: self.size
                spacing: 20
                # Initial word card boxes
                BoxLayout:
                    # size_hint: (1, 0.125)
                    size_hint_y: None
                    height: 60
                    Label:
                        text: 'Word 1'
                    # Button:
                    #     text: 'Button'
                BoxLayout:
                    # size_hint: (1, 0.125)
                    size_hint_y: None
                    height: 60
                    Label:
                        text: 'Word 2'
                    # Button:
                    #     text: 'Button'
                BoxLayout:
                    # size_hint: (1, 0.125)
                    size_hint_y: None
                    height: 60
                    Label:
                        text: 'Word 3'
                    # Button:
                    #     text: 'Button'
        
        # 下面的BoxLayout，包含按鈕
        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1, 0.12)
            padding: 20
            spacing: 20
            canvas.before:
                Color:
                    rgba: (0, 1, 0, 1)
                Rectangle:
                    pos: self.pos
                    size: self.size
            Button:
                text: "Cards"
            Button:
                text: "Add Card"
                on_press: root.add_card()

