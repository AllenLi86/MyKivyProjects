<MyCardLayout@MDBoxLayout>:
    size_hint_y: None
    height: 100
    canvas.before:
        Color:
            rgba: 1, 0, 0, 1  # Red color background
        Rectangle:
            size: self.size
            pos: self.pos
    MDFlatButton:
        orientation: 'vertical'  # Change to vertical
        size_hint: 1, 1
        on_press: app.on_label_press()
        MDLabel:
            text: root.text
            font_size: 32

